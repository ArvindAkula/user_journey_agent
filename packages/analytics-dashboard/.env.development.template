# =============================================================================
# Analytics Dashboard - Development Environment Template
# =============================================================================
# Copy this file to .env.development and fill in the actual values
# This file is safe to commit to version control (contains no secrets)
# =============================================================================

# =============================================================================
# Environment Configuration
# =============================================================================
NODE_ENV=development
REACT_APP_ENVIRONMENT=development
REACT_APP_APP_TYPE=analytics

# =============================================================================
# Server Configuration
# =============================================================================
# Port for development server
PORT=3001

# =============================================================================
# Backend API Configuration
# =============================================================================
# Local development backend URL
REACT_APP_API_BASE_URL=http://localhost:8080/api

# Analytics-specific API endpoint
REACT_APP_ANALYTICS_API_BASE_URL=http://localhost:8080/api/analytics

# WebSocket URL for real-time analytics
REACT_APP_WEBSOCKET_URL=ws://localhost:8080/ws/analytics

# Real-time data endpoint
REACT_APP_REALTIME_ENDPOINT=ws://localhost:8080/ws/realtime

# =============================================================================
# Firebase Configuration - Development
# =============================================================================
# Get these values from Firebase Console > Project Settings
# For development, you can use Firebase Emulator or a dev Firebase project

# Firebase API Key (public, safe to commit for dev project)
REACT_APP_FIREBASE_API_KEY=your-dev-firebase-api-key

# Firebase Auth Domain
REACT_APP_FIREBASE_AUTH_DOMAIN=your-dev-project.firebaseapp.com

# Firebase Project ID
REACT_APP_FIREBASE_PROJECT_ID=your-dev-firebase-project-id

# Firebase Storage Bucket (optional for analytics dashboard)
REACT_APP_FIREBASE_STORAGE_BUCKET=your-dev-project.firebasestorage.app

# Firebase Messaging Sender ID (optional)
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789012

# Firebase App ID (optional)
REACT_APP_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890

# =============================================================================
# Firebase Emulator Configuration (Optional)
# =============================================================================
# Set to 'true' to use Firebase Emulator instead of actual Firebase
REACT_APP_FIREBASE_USE_EMULATOR=true

# Firebase Emulator Host (default: localhost)
REACT_APP_FIREBASE_EMULATOR_HOST=localhost

# Firebase Auth Emulator Port (default: 9099)
REACT_APP_FIREBASE_EMULATOR_PORT=9099

# =============================================================================
# Authentication Configuration
# =============================================================================
# Authentication provider (jwt, firebase, etc.)
REACT_APP_AUTH_PROVIDER=jwt

# Authentication endpoint
REACT_APP_AUTH_ENDPOINT=http://localhost:8080/api/auth

# Token refresh interval (milliseconds) - 1 hour
REACT_APP_TOKEN_REFRESH_INTERVAL=3600000

# Session timeout (milliseconds) - 2 hours
REACT_APP_SESSION_TIMEOUT=7200000

# =============================================================================
# Analytics Configuration
# =============================================================================
# Data refresh interval (milliseconds) - 30 seconds
REACT_APP_ANALYTICS_REFRESH_INTERVAL=30000

# Maximum records for export
REACT_APP_EXPORT_MAX_RECORDS=10000

# Chart animation duration (milliseconds)
REACT_APP_CHART_ANIMATION_DURATION=300

# Data retention period (days)
REACT_APP_DATA_RETENTION_DAYS=90

# Maximum concurrent exports
REACT_APP_MAX_CONCURRENT_EXPORTS=3

# Real-time data buffer size
REACT_APP_REALTIME_BUFFER_SIZE=1000

# Pagination size
REACT_APP_PAGINATION_SIZE=50

# Maximum data points in charts
REACT_APP_CHART_MAX_DATA_POINTS=1000

# Debounce delay for filters (milliseconds)
REACT_APP_DEBOUNCE_DELAY=300

# =============================================================================
# Feature Flags - Development
# =============================================================================
# Enable Amazon Q integration
REACT_APP_ENABLE_AMAZON_Q=true

# Enable data export functionality
REACT_APP_ENABLE_EXPORT=true

# Enable real-time analytics
REACT_APP_ENABLE_REALTIME=true

# Enable advanced filters
REACT_APP_ENABLE_ADVANCED_FILTERS=true

# Enable user segmentation
REACT_APP_ENABLE_USER_SEGMENTATION=true

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug mode (verbose console logging)
REACT_APP_DEBUG_MODE=true

# Enable React DevTools
REACT_APP_ENABLE_DEVTOOLS=true

# =============================================================================
# Build Configuration
# =============================================================================
# Generate source maps for debugging
GENERATE_SOURCEMAP=true

# Analyze bundle size
ANALYZE_BUNDLE=false
