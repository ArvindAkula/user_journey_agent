# =============================================================================
# Analytics Dashboard - Production Environment Configuration Template
# =============================================================================
# Copy this file to .env.production and fill in the actual values
# NEVER commit the actual .env.production file to version control
# =============================================================================

# Environment
NODE_ENV=production

# =============================================================================
# Backend API Configuration
# =============================================================================
# REQUIRED: Replace with your production API endpoints
REACT_APP_API_BASE_URL=https://api.journey-analytics.io/api
REACT_APP_ANALYTICS_API_BASE_URL=https://api.journey-analytics.io/api/analytics
REACT_APP_WEBSOCKET_URL=wss://api.journey-analytics.io/ws/analytics
REACT_APP_REALTIME_ENDPOINT=wss://api.journey-analytics.io/ws/realtime

# =============================================================================
# Firebase Configuration - Production
# =============================================================================
# REQUIRED: Get these values from Firebase Console > Project Settings
# Navigate to: https://console.firebase.google.com/project/YOUR_PROJECT/settings/general
REACT_APP_FIREBASE_API_KEY=<your-firebase-api-key>
REACT_APP_FIREBASE_AUTH_DOMAIN=<your-project-id>.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=<your-firebase-project-id>
REACT_APP_FIREBASE_STORAGE_BUCKET=<your-project-id>.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=<your-messaging-sender-id>
REACT_APP_FIREBASE_APP_ID=<your-firebase-app-id>
REACT_APP_FIREBASE_MEASUREMENT_ID=<your-measurement-id>

# Firebase Emulator Settings (disabled in production)
REACT_APP_FIREBASE_USE_EMULATOR=false

# =============================================================================
# Application Configuration
# =============================================================================
REACT_APP_ENVIRONMENT=production
REACT_APP_APP_NAME=Analytics Dashboard
REACT_APP_VERSION=1.0.0
REACT_APP_APP_TYPE=analytics

# =============================================================================
# Analytics Specific Configuration
# =============================================================================
REACT_APP_ANALYTICS_REFRESH_INTERVAL=30000
REACT_APP_EXPORT_MAX_RECORDS=10000
REACT_APP_CHART_ANIMATION_DURATION=300
REACT_APP_DATA_RETENTION_DAYS=90
REACT_APP_MAX_CONCURRENT_EXPORTS=3
REACT_APP_REALTIME_BUFFER_SIZE=1000

# =============================================================================
# Authentication Configuration
# =============================================================================
REACT_APP_AUTH_PROVIDER=jwt
REACT_APP_AUTH_ENDPOINT=https://api.journey-analytics.io/api/auth
REACT_APP_TOKEN_REFRESH_INTERVAL=3600000
REACT_APP_SESSION_TIMEOUT=7200000

# =============================================================================
# Feature Flags for Analytics
# =============================================================================
REACT_APP_ENABLE_AMAZON_Q=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_REALTIME=true
REACT_APP_ENABLE_ADVANCED_FILTERS=true
REACT_APP_ENABLE_USER_SEGMENTATION=true

# =============================================================================
# Performance Configuration
# =============================================================================
REACT_APP_PAGINATION_SIZE=50
REACT_APP_CHART_MAX_DATA_POINTS=1000
REACT_APP_DEBOUNCE_DELAY=300

# =============================================================================
# Production Settings
# =============================================================================
REACT_APP_DEBUG_MODE=false

# Build Optimizations
GENERATE_SOURCEMAP=false

# Port Configuration (for local production testing)
PORT=3001
