# =============================================================================
# User App - Development Environment Configuration Template
# =============================================================================
# Copy this file to .env.development and fill in the actual values
# This file is safe to commit to version control
# =============================================================================

# Environment
NODE_ENV=development

# =============================================================================
# Backend API Configuration
# =============================================================================
# Local development backend URL
REACT_APP_API_BASE_URL=http://localhost:8080/api
REACT_APP_WEBSOCKET_URL=ws://localhost:8080/ws

# =============================================================================
# Firebase Configuration - Development (Emulator)
# =============================================================================
# These are placeholder values for Firebase Emulator
# The emulator doesn't require real credentials
REACT_APP_FIREBASE_API_KEY=dev-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=localhost
REACT_APP_FIREBASE_PROJECT_ID=user-journey-analytics-dev
REACT_APP_FIREBASE_STORAGE_BUCKET=user-journey-analytics-dev.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef123456
REACT_APP_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Emulator Settings
REACT_APP_FIREBASE_USE_EMULATOR=true
REACT_APP_FIREBASE_EMULATOR_HOST=localhost
REACT_APP_FIREBASE_EMULATOR_PORT=9099

# =============================================================================
# Feature Flags
# =============================================================================
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_VIDEO_TRACKING=true
REACT_APP_ENABLE_INTERVENTIONS=true

# =============================================================================
# Development Settings
# =============================================================================
REACT_APP_DEBUG_MODE=true

# Port Configuration
PORT=3000
