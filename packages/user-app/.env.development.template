# =============================================================================
# User App - Development Environment Template
# =============================================================================
# Copy this file to .env.development and fill in the actual values
# This file is safe to commit to version control (contains no secrets)
# =============================================================================

# =============================================================================
# Environment Configuration
# =============================================================================
NODE_ENV=development
REACT_APP_ENVIRONMENT=development

# =============================================================================
# Backend API Configuration
# =============================================================================
# Local development backend URL
REACT_APP_API_BASE_URL=http://localhost:8080/api

# WebSocket URL for real-time features
REACT_APP_WS_URL=ws://localhost:8080/ws

# =============================================================================
# Firebase Configuration - Development
# =============================================================================
# Get these values from Firebase Console > Project Settings
# For development, you can use Firebase Emulator or a dev Firebase project

# Firebase API Key (public, safe to commit for dev project)
REACT_APP_FIREBASE_API_KEY=your-dev-firebase-api-key

# Firebase Auth Domain
REACT_APP_FIREBASE_AUTH_DOMAIN=your-dev-project.firebaseapp.com

# Firebase Project ID
REACT_APP_FIREBASE_PROJECT_ID=your-dev-firebase-project-id

# Firebase Storage Bucket
REACT_APP_FIREBASE_STORAGE_BUCKET=your-dev-project.firebasestorage.app

# Firebase Messaging Sender ID
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789012

# Firebase App ID
REACT_APP_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890

# Firebase Measurement ID (optional for development)
REACT_APP_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# Firebase Emulator Configuration (Optional)
# =============================================================================
# Set to 'true' to use Firebase Emulator instead of actual Firebase
REACT_APP_FIREBASE_USE_EMULATOR=true

# Firebase Emulator Host (default: localhost)
REACT_APP_FIREBASE_EMULATOR_HOST=localhost

# Firebase Auth Emulator Port (default: 9099)
REACT_APP_FIREBASE_EMULATOR_PORT=9099

# =============================================================================
# Feature Flags - Development
# =============================================================================
# Enable Firebase Analytics tracking
REACT_APP_ENABLE_ANALYTICS=true

# Enable video engagement tracking
REACT_APP_ENABLE_VIDEO_TRACKING=true

# Enable intervention system
REACT_APP_ENABLE_INTERVENTIONS=true

# Enable calculator feature
REACT_APP_ENABLE_CALCULATOR=true

# Enable document upload feature
REACT_APP_ENABLE_DOCUMENT_UPLOAD=true

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug mode (verbose console logging)
REACT_APP_DEBUG_MODE=true

# Enable React DevTools
REACT_APP_ENABLE_DEVTOOLS=true

# Disable service worker in development
REACT_APP_ENABLE_SERVICE_WORKER=false

# =============================================================================
# Performance Configuration
# =============================================================================
# API request timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# Retry attempts for failed requests
REACT_APP_API_RETRY_ATTEMPTS=3

# =============================================================================
# Build Configuration
# =============================================================================
# Generate source maps for debugging
GENERATE_SOURCEMAP=true

# Port for development server
PORT=3000
