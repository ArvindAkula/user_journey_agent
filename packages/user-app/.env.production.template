# =============================================================================
# User App - Production Environment Template
# =============================================================================
# Copy this file to .env.production and fill in the actual values
# NEVER commit the actual .env.production file to version control!
# =============================================================================

# =============================================================================
# Environment Configuration
# =============================================================================
NODE_ENV=production
REACT_APP_ENVIRONMENT=production

# =============================================================================
# Backend API Configuration
# =============================================================================
# REQUIRED: Production backend API URL
# Example: https://api.journey-analytics.io
REACT_APP_API_BASE_URL=https://your-production-api-domain.com/api

# REQUIRED: WebSocket URL for real-time features
# Example: wss://api.journey-analytics.io/ws
REACT_APP_WS_URL=wss://your-production-api-domain.com/ws

# =============================================================================
# Firebase Configuration - Production
# =============================================================================
# REQUIRED: Get these values from Firebase Console > Project Settings
# These are for your PRODUCTION Firebase project

# REQUIRED: Firebase API Key (public, but use production key)
REACT_APP_FIREBASE_API_KEY=your-production-firebase-api-key

# REQUIRED: Firebase Auth Domain
REACT_APP_FIREBASE_AUTH_DOMAIN=your-production-project.firebaseapp.com

# REQUIRED: Firebase Project ID
REACT_APP_FIREBASE_PROJECT_ID=your-production-firebase-project-id

# REQUIRED: Firebase Storage Bucket
REACT_APP_FIREBASE_STORAGE_BUCKET=your-production-project.firebasestorage.app

# REQUIRED: Firebase Messaging Sender ID
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=987654321098

# REQUIRED: Firebase App ID
REACT_APP_FIREBASE_APP_ID=1:987654321098:web:fedcba0987654321

# OPTIONAL: Firebase Measurement ID (for Google Analytics)
REACT_APP_FIREBASE_MEASUREMENT_ID=G-YYYYYYYYYY

# =============================================================================
# Firebase Emulator Configuration
# =============================================================================
# MUST be false in production
REACT_APP_FIREBASE_USE_EMULATOR=false

# =============================================================================
# Feature Flags - Production
# =============================================================================
# Enable Firebase Analytics tracking
REACT_APP_ENABLE_ANALYTICS=true

# Enable video engagement tracking
REACT_APP_ENABLE_VIDEO_TRACKING=true

# Enable intervention system
REACT_APP_ENABLE_INTERVENTIONS=true

# Enable calculator feature
REACT_APP_ENABLE_CALCULATOR=true

# Enable document upload feature
REACT_APP_ENABLE_DOCUMENT_UPLOAD=true

# =============================================================================
# Production Settings
# =============================================================================
# Disable debug mode in production
REACT_APP_DEBUG_MODE=false

# Disable React DevTools in production
REACT_APP_ENABLE_DEVTOOLS=false

# Enable service worker for offline support
REACT_APP_ENABLE_SERVICE_WORKER=true

# =============================================================================
# Performance Configuration
# =============================================================================
# API request timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# Retry attempts for failed requests
REACT_APP_API_RETRY_ATTEMPTS=3

# =============================================================================
# Error Reporting (Optional)
# =============================================================================
# Sentry DSN for error tracking
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Error reporting endpoint
# REACT_APP_ERROR_REPORTING_ENDPOINT=https://your-error-reporting-service.com

# =============================================================================
# CDN Configuration (Optional)
# =============================================================================
# CDN URL for static assets
# REACT_APP_CDN_URL=https://cdn.your-domain.com

# =============================================================================
# Build Configuration
# =============================================================================
# DO NOT generate source maps in production (security)
GENERATE_SOURCEMAP=false

# Analyze bundle size (set to true only when needed)
ANALYZE_BUNDLE=false
